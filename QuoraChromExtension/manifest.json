{
  "manifest_version": 2,

  "name": "Quora Quick Sort",
  "short_name": "QQS",
  "description": "Sort and filter Quora answers by upvotes, dates, views and comments",
  "version": "1.7.4.133",

  "browser_action": {
    "default_icon": "img/Quora.png",
    "default_title": "Quora Filter",
	"default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://www.quora.com/*"
  ]
}