{
  "manifest_version": 2,

  "name": "Quora Quick Sort",
  "short_name": "QQS",
  "description": "Sort and filter Quora answers by upvotes, dates, views and comments",
  "version": "1.7.4.172",
  "icons": { "16": "img/Quora16.png",
           "48": "img/Quora48.png",
          "128": "img/Quora.png" },
          
  "browser_action": {
    "default_icon": "img/Quora.png",
    "default_title": "Quora Filter",
	"default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://www.quora.com/*"
  ]
}